{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HTTP Proxy Go Server Configuration Schema",
  "description": "Configuration schema for the HTTP proxy server with support for multiple upstream proxies, DNS over HTTPS, and routing rules",
  "type": "object",
  "additionalProperties": false,
  "required": [],
  "properties": {
    "hostname": {
      "type": "string",
      "description": "Server hostname to bind to",
      "default": "0.0.0.0",
      "format": "hostname",
      "minLength": 1,
      "maxLength": 253
    },
    "port": {
      "type": "integer",
      "description": "TCP port to listen on",
      "default": 8080,
      "minimum": 1,
      "maximum": 65535
    },
    "server_cert": {
      "type": "string",
      "description": "Path to TLS server certificate file",
      "minLength": 1
    },
    "server_key": {
      "type": "string",
      "description": "Path to TLS server private key file",
      "minLength": 1
    },
    "username": {
      "type": "string",
      "description": "Username for basic authentication",
      "minLength": 1
    },
    "password": {
      "type": "string",
      "description": "Password for basic authentication",
      "minLength": 1
    },
    "doh": {
      "type": "array",
      "description": "DNS over HTTPS configuration",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["url"],
        "properties": {
          "ip": {
            "type": "string",
            "description": "DNS server IP address (IPv4 or IPv6)",
            "anyOf": [
              { "format": "ipv4" },
              { "format": "ipv6" }
            ]
          },
          "alpn": {
            "type": "string",
            "description": "Application-Layer Protocol Negotiation",
            "enum": ["h2", "h3"],
            "default": "h2"
          },
          "url": {
            "type": "string",
            "description": "DoH server URL",
            "format": "uri",
            "pattern": "^https?://.*"
          },
          "protocol": {
            "type": "string",
            "description": "DNS protocol type",
            "enum": ["doh", "doh3"],
            "default": "doh"
          }
        }
      }
    },
    "dot": {
      "type": "array",
      "description": "DNS over TLS configuration",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["url"],
        "properties": {
          "ip": {
            "type": "string",
            "description": "DoT server IP address (IPv4 or IPv6)",
            "anyOf": [
              { "format": "ipv4" },
              { "format": "ipv6" }
            ]
          },
          "url": {
            "type": "string",
            "description": "DoT server URL",
            "format": "uri",
            "pattern": "^tls://.*"
          }
        }
      }
    },
    "doq": {
      "type": "array",
      "description": "DNS over QUIC configuration",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["url"],
        "properties": {
          "ip": {
            "type": "string",
            "description": "DoQ server IP address (IPv4 or IPv6)",
            "anyOf": [
              { "format": "ipv4" },
              { "format": "ipv6" }
            ]
          },
          "url": {
            "type": "string",
            "description": "DoQ server URL",
            "format": "uri",
            "pattern": "^quic://.*"
          }
        }
      }
    },
    "dns_cache": {
      "type": "object",
      "description": "DNS cache configuration",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable DNS caching",
          "default": true
        },
        "file": {
          "type": "string",
          "description": "DNS cache file path",
          "default": "./dns_cache.json",
          "minLength": 1
        },
        "ttl": {
          "type": "string",
          "description": "DNS cache TTL (duration string, e.g., 5m, 10m, 1h)",
          "default": "10m",
          "pattern": "^[0-9]+(?:\\.[0-9]+)?(?:ns|us|µs|ms|s|m|h)$"
        },
        "save_interval": {
          "type": "string",
          "description": "DNS cache save interval (duration string, e.g., 30s, 1m)",
          "default": "30s",
          "pattern": "^[0-9]+(?:\\.[0-9]+)?(?:ns|us|µs|ms|s|m|h)$"
        },
        "aof_enabled": {
          "type": "boolean",
          "description": "Enable DNS cache AOF persistence",
          "default": true
        },
        "aof_file": {
          "type": "string",
          "description": "DNS cache AOF file path",
          "default": "./dns_cache.aof",
          "minLength": 1
        },
        "aof_interval": {
          "type": "string",
          "description": "DNS cache AOF save interval (duration string, e.g., 1s, 5s)",
          "default": "1s",
          "pattern": "^[0-9]+(?:\\.[0-9]+)?(?:ns|us|µs|ms|s|m|h)$"
        }
      }
    },
    "upstream_resolve_ips": {
      "type": "boolean",
      "description": "Resolve upstream proxy domains to IP addresses before connection to bypass DNS pollution",
      "default": false
    },
    "upstreams": {
      "type": "object",
      "description": "Upstream proxy configurations",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "description": "Upstream proxy type",
              "enum": ["http", "socks5", "websocket"]
            },
            "http_proxy": {
              "type": "string",
              "description": "HTTP proxy URL for HTTP requests",
              "format": "uri",
              "pattern": "^https?://.*"
            },
            "https_proxy": {
              "type": "string",
              "description": "HTTP proxy URL for HTTPS requests",
              "format": "uri",
              "pattern": "^https?://.*"
            },
            "bypass_list": {
              "type": "array",
              "description": "List of domains/IPs/CIDR to bypass proxy",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "uniqueItems": true
            },
            "ws_proxy": {
              "type": "string",
              "description": "WebSocket proxy URL",
              "format": "uri",
              "pattern": "^wss?://.*"
            },
            "ws_username": {
              "type": "string",
              "description": "WebSocket proxy username"
            },
            "ws_password": {
              "type": "string",
              "description": "WebSocket proxy password"
            },
            "http_username": {
              "type": "string",
              "description": "HTTP proxy username"
            },
            "http_password": {
              "type": "string",
              "description": "HTTP proxy password"
            },
            "socks5_proxy": {
              "type": "string",
              "description": "SOCKS5 proxy URL",
              "format": "uri",
              "pattern": "^(socks5|socks5s|tcp|tls)://.*"
            },
            "socks5_username": {
              "type": "string",
              "description": "SOCKS5 proxy username"
            },
            "socks5_password": {
              "type": "string",
              "description": "SOCKS5 proxy password"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": { "const": "http" }
                },
                "required": ["type"]
              },
              "then": {
                "required": ["http_proxy"],
                "dependencies": {
                  "http_proxy": {
                    "properties": {
                      "https_proxy": { "type": "string" }
                    }
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": { "const": "websocket" }
                },
                "required": ["type"]
              },
              "then": {
                "required": ["ws_proxy"]
              }
            },
            {
              "if": {
                "properties": {
                  "type": { "const": "socks5" }
                },
                "required": ["type"]
              },
              "then": {
                "required": ["socks5_proxy"]
              }
            }
          ]
        }
      }
    },
    "rules": {
      "type": "array",
      "description": "Routing rules for upstream selection",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["filter", "upstream"],
        "properties": {
          "filter": {
            "type": "string",
            "description": "Filter name to match patterns",
            "minLength": 1
          },
          "upstream": {
            "type": "string",
            "description": "Upstream name to route to",
            "minLength": 1
          }
        }
      }
    },
    "filters": {
      "type": "object",
      "description": "Pattern filters for routing rules",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "additionalProperties": false,
          "required": ["patterns"],
          "properties": {
            "patterns": {
              "type": "array",
              "description": "List of patterns (domains, IPs, CIDR, wildcards)",
              "items": {
                "type": "string",
                "minLength": 1,
                "description": "Pattern can be domain, IP, CIDR, or wildcard (e.g., *.example.com, 192.168.1.0/24, *)"
              },
              "uniqueItems": true,
              "minItems": 1
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "server_cert": { "type": "string", "minLength": 1 }
        },
        "required": ["server_cert"]
      },
      "then": {
        "properties": {
          "server_key": { "type": "string", "minLength": 1 }
        },
        "required": ["server_key"]
      }
    },
    {
      "if": {
        "properties": {
          "server_key": { "type": "string", "minLength": 1 }
        },
        "required": ["server_key"]
      },
      "then": {
        "properties": {
          "server_cert": { "type": "string", "minLength": 1 }
        },
        "required": ["server_cert"]
      }
    },
    {
      "if": {
        "properties": {
          "username": { "type": "string", "minLength": 1 }
        },
        "required": ["username"]
      },
      "then": {
        "properties": {
          "password": { "type": "string", "minLength": 1 }
        },
        "required": ["password"]
      }
    },
    {
      "if": {
        "properties": {
          "password": { "type": "string", "minLength": 1 }
        },
        "required": ["password"]
      },
      "then": {
        "properties": {
          "username": { "type": "string", "minLength": 1 }
        },
        "required": ["username"]
      }
    }
  ]
}
